/* --- MOBILE COLLAPSE LOGIC (Stack -> Single Bar) --- */
.nav-slab-brand {
    transition: height 0.6s cubic-bezier(0.16, 1, 0.3, 1), opacity 0.4s ease, padding 0.4s ease;
    overflow: hidden;
    /* Ensure content hides */
}

.top-nav-slabs.nav-collapsed .nav-slab-brand {
    height: 0 !important;
    padding: 0 !important;
    opacity: 0;
    border: none;
}

/* --- DESKTOP / TABLET OVERRIDE (Single Row) --- */
@media (min-width: 1028px) {
    .top-nav-slabs {
        flex-direction: row;
        /* Single fixed height */
        align-items: center;
        padding: 0;
    }

    /* Absolute Center Brand Integration */
    .nav-slab-brand {
        position: absolute;
        left: 50%;
        top: 50%;
        transform: translate(-50%, -50%);
        width: auto;
        height: auto;
        border: none;
        overflow: visible;
        /* Allow expansion */
        z-index: 20;
        /* Ensure on top for Hover */
    }

    /* Make Controls Full Width behind Brand */
    .nav-slab-controls {
        width: 100%;
        padding: 1vw;
        /* Ensure Links and Button are separated */
        justify-content: space-between;
    }

    /* Disable Collapse on Desktop (Persistent Nav) */
    .top-nav-slabs.nav-collapsed .nav-slab-brand {
        height: auto;
        opacity: 1;
    }

    .top-nav-slabs.nav-collapsed {
        border-bottom: 1px solid var(--brand-pop50);
        /* Keep border */
    }
}

/* --- FOOTER HEART & SCROLLBAR --- */

/* Footer Heart Animation */
.footer-bar span:nth-child(2) {
    color: var(--text-gray);
}

/* Note: The HTML needs to wrap the heart in a span or we target the text node carefully. 
   Ideally, wrap '❤️' in <span class="heart-pulse">❤️</span> in HTML. 
   Assuming standard text for now, but will add class in HTML next step. */
.heart-pulse {
    display: inline-block;
    color: var(--brand-pop) !important;
    /* Force Pop Color */
    filter: drop-shadow(0 0 5px var(--brand-pop));
    font-style: normal;
}


/* --- VIRTUAL SCROLLBAR (OVERLAY) --- */
/* Hide Default Scrollbar Globally */
html,
body {
    scrollbar-width: none;
    /* Firefox */
    -ms-overflow-style: none;
    /* IE/Edge */
}

/* Chrome/Safari */
::-webkit-scrollbar {
    width: 0px;
    background: transparent;
    display: none;
}

#virtual-scrollbar {
    position: fixed;
    top: 130px;
    /* DEFAULT: Stacked Nav Height (Mobile/Tablet) */
    right: 8px;
    width: 8px;
    /* Wider Track (Thumb + 2px) */
    height: calc(100vh - 260px);
    z-index: 9999;
    pointer-events: auto;
    /* Allow clicking/dragging */
    mix-blend-mode: normal;
    /* ensure visibility */
    cursor: pointer;
    /* Clickable */
    opacity: 0;
    /* Hidden on Load */
    transition: opacity 0.4s ease-out;
}

#virtual-scrollbar.scrolling {
    opacity: 1;
    /* Revealed on Scroll */
}

/* --- DESKTOP SCROLLBAR ADJUSTMENT --- */
@media (min-width: 1028px) {
    #virtual-scrollbar {
        top: 80px;
        /* DESKTOP: Single Row Nav Height */
        height: calc(100vh - 160px);
    }
}

/* The Track Line */
.scrollbar-track {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(102, 127, 228, 0.1);
    /* Faint Brand Tint */
    border-radius: 4px;
}

/* The Draggable Thumb */
.scrollbar-thumb {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    margin: 0 auto;
    /* Center in 8px track */
    width: 6px;
    height: 100px;
    /* Dynamic via JS */
    background: var(--brand-pop);
    /* Veetance Blue-Purple */
    border-radius: 4px;
    cursor: grab;
    box-shadow: 0 0 10px rgba(102, 127, 228, 0.5);
    /* Neon Glow */
    transition: background 0.2s, width 0.2s;
}

/* Hover Effects */
#virtual-scrollbar:hover .scrollbar-thumb {
    background: var(--text-white);
    width: 8px;
    /* Expands slightly */
    right: 3px;
}

/* Glow Container */
.scrollbar-glow-container {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
    /* Clips the glow */
    pointer-events: none;
}

/* The Glow Ball */
.scrollbar-glow-ball {
    position: absolute;
    width: 100px;
    height: 100px;
    background: radial-gradient(circle, var(--brand-pop) 0%, transparent 70%);
    border-radius: 50%;
    transform: translate(-50%, -50%);
    /* Centered on mouse */
    opacity: 0;
    transition: opacity 0.2s;
    pointer-events: none;
}

#virtual-scrollbar:hover .scrollbar-glow-ball {
    opacity: 0.6;
}

