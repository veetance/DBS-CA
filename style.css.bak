/* --- TECH STACK SECTION --- */
#tech-stack {
    background: var(--brand-pop-dark);
    /* Ensures it sits well if overlaying */
    position: relative;
    z-index: 5;
}

/* Part 1: Tools Grid (Marquee) */
.tools-marquee-container {
    width: 100%;
    overflow: hidden;
    /* Hide scrollbar */
    position: relative;
    /* Fade Masks for Smooth entry/exit */
    mask-image: linear-gradient(to right, transparent, black 10%, black 90%, transparent);
    -webkit-mask-image: linear-gradient(to right, transparent, black 10%, black 90%, transparent);
}

.tools-track {
    display: flex;
    width: max-content;
    gap: 20px;
    animation: scroll-tools 40s linear infinite;
    padding: 2vh;
}

/* Pause on Hover */
.tools-track:hover {
    animation-play-state: paused;
}

@keyframes scroll-tools {
    0% {
        transform: translateX(0);
    }

    100% {
        /* Translates by half of the total width (since content is doubled) */
        /* Note: This requires precise duplicate set. Assuming -50% works if track is exactly 2x content */
        transform: translateX(-50%);
    }
}

.tool-card {
    width: 120px;
    height: 120px;
    flex: 0 0 auto;
    /* Prevent shrinking */
    border: 1px solid var(--brand-pop60);
    border-radius: 8px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 10px;
    transition: all 0.3s ease;
    cursor: pointer;
    background: rgba(55, 52, 100, 0.11);
}

.tool-card:hover {
    border-color: var(--brand-pop);
    box-shadow: 0 0 15px rgba(69, 97, 204, 0.1);
    transform: translateY(-5px) scale(1.05);
    background: rgba(69, 97, 204, 0.05);
}

.tool-card span {
    font-family: var(--font-body);
    font-size: 0.7rem;
    color: var(--text-gray);
    text-transform: uppercase;
    letter-spacing: 0.1em;
}

.tool-icon-placeholder {
    width: 40px;
    height: 40px;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 4px;
}

/* Part 2: Proficiency Chips */
.proficiency-container {
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    padding-top: 40px;
}

/* Subsection Title with Long Pop Underline */
.subsection-title {
    display: block;
    width: 100%;
    font-family: var(--font-display);
    font-size: 0.9rem;
    color: var(--brand-pop40);
    letter-spacing: 0.2em;
    text-transform: uppercase;
    margin-bottom: 40px;

    /* The Long Line */
    border-bottom: 1px solid var(--brand-pop50);
    padding-bottom: 15px;
