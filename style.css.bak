    font-weight: 600;
    color: var(--text-white);
    margin-bottom: 20px;
    letter-spacing: 0.1em;
}

.chip-group {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
    position: relative;
    overflow: visible;
}

.skill-chip {
    font-family: var(--font-body);
    font-size: 0.8rem;
    color: var(--text-gray);
    border: 1px solid var(--brand-pop60);
    padding: 6px 14px;
    border-radius: 8px;
    transition: all 0.2s ease;
    cursor: pointer;
    position: relative;
    overflow: hidden;
    background: transparent;
}

/* Glow effect that follows mouse across entire chip-group */
.chip-glow {
    position: absolute;
    width: 200px;
    height: 200px;
    border-radius: 50%;
    background: radial-gradient(circle, rgba(69, 97, 204, 0.4) 0%, rgba(69, 97, 204, 0) 70%);
    transform: translate(-50%, -50%);
    pointer-events: none;
    z-index: 0;
    opacity: 0;
    transition: opacity 0.3s;
    visibility: hidden;
    /* Hide the actual glow, only show through chips */
}

.chip-group:hover .chip-glow {
    opacity: 1;
    visibility: hidden;
    /* Keep hidden, only chips reveal it */
}

/* Chips reveal the glow */
.skill-chip::before {
    content: '';
    position: absolute;
    inset: 0;
    background: radial-gradient(circle 100px at var(--mouse-x, 50%) var(--mouse-y, 50%),
            rgba(69, 97, 204, 0.35) 0%,
            transparent 70%);
    opacity: 0;
    transition: opacity 0.2s;
    pointer-events: none;
    z-index: -1;
    border-radius: 8px;
    /* Match chip border-radius */
}

.chip-group:hover .skill-chip::before {
    opacity: 1;
}

.skill-chip:hover {
    border-color: var(--brand-pop);
    color: var(--text-white);
    background: rgba(69, 97, 204, 0.05);
}

