/* 
   DBS Layout & Components
   style.css
   Depends on: css/app-theme.css
*/

/* Base Reset */
*,
*::before,
*::after {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
}

/* Application Statement Card Styles */
/* Application Statement Card Styles */
.job-application-card {
    background: rgba(255, 255, 255, 0.02);
    padding: 50px;
    border: 1px solid rgba(255, 255, 255, 0.08);
    position: relative;
    font-family: var(--font-body);
    /* Stack Sans Text */
}

.job-id-stamp {
    position: absolute;
    top: 30px;
    right: 30px;
    font-family: var(--font-display);
    font-size: 2rem;
    color: rgba(255, 255, 255, 0.05);
    /* Very faint watermark */
    font-weight: 800;
    pointer-events: none;
}

.job-label {
    font-family: var(--font-body);
    /* Sans-serif label */
    font-size: 0.8rem;
    color: #666;
    /* Purple/Gray accent */
    margin-bottom: 30px;
    text-transform: uppercase;
    letter-spacing: 0.05em;
}

.job-label span {
    color: #8b5cf6;
}

/* Purple accent attempt */

.letter-body {
    font-size: 1.1rem;
    line-height: 1.6;
    color: #e5e5e5;
}

.letter-body strong {
    color: #fff;
    font-weight: 700;
}

.letter-list {
    margin-top: 20px;
    padding-left: 20px;
    list-style-type: none;
    /* Custom bullets if needed, using default for now */
}

.letter-list li {
    margin-bottom: 12px;
    position: relative;
}

.letter-list li::before {
    content: "•";
    color: #666;
    position: absolute;
    left: -15px;
}

/* --- THE NEW NAV --- */
/* Sticky, minimal, text-based. No buttons. */
/* --- THE NEW NAV: TWO SLABS --- */
.top-nav-slabs {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: fit-content;
    display: flex;
    flex-direction: column;
    z-index: 1000;
    background: linear-gradient(to top, rgb(0, 0, 0), rgba(0, 0, 0, 0));
    /* Darker glass for better contrast */
    backdrop-filter: blur(25px);
    border-bottom: 1px solid var(--brand-pop50);
    transition: all 0.5s cubic-bezier(0.16, 1, 0.3, 1);
}

/* SLAB 1: BRANDING (Top, Collapsible) */
.nav-slab-brand {
    width: 100%;
    height: 45px;
    /* REDUCED from 60px */
    display: flex;
    justify-content: center;
    /* Center Stage */
    align-items: center;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    transition: height 0.5s cubic-bezier(0.16, 1, 0.3, 1), opacity 0.3s ease;
    overflow: hidden;
    /* For smooth collapse */
}

/* Make Controls Full Width behind Brand */
.nav-slab-controls {
    width: 100%;
    padding: 1vw;
    /* THIN PADDING: 1vw */
    justify-content: space-between;

    height: fit-content;
    display: flex;
    align-items: center;
    /* Darker glass for better contrast */
    backdrop-filter: blur(15px);
}

/* --- COLLAPSED STATE (Applied via JS) --- */
.top-nav-slabs.nav-collapsed .nav-slab-brand {
    height: 0;
    opacity: 0;
    border-bottom: none;
}

/* Wrapper Update - Allow Full Center Expansion */
.nav-logo-wrapper {
    width: auto;
    /* Allow expansion */
    height: auto;
    position: relative;
    display: flex;
    justify-content: center;
}

.nav-logo {
    /* Reset Position */
    position: relative;
    left: auto;
    top: auto;
    transform: none;

    font-family: var(--font-display);
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    font-size: 1rem;
    /* Slightly larger for center stage */
    display: flex;
    align-items: center;
    cursor: pointer;
    user-select: none;
    z-index: 1002;
    /* Gradient Background Removed (No longer needed on dark slab) */
    background: transparent;
    padding-right: 0;

    width: max-content;
    white-space: nowrap;

    /* Gap between words */
    gap: 12px;
    /* Use browser value or 4px explicitly */

    /* Bright by default - stays bright during contraction */
    opacity: 1;
    transition: opacity 0.6s ease;
}

.nav-word {
    display: inline-flex;
    align-items: flex-end;
    /* Align expanding text to baseline */
}

/* Dim state - applied AFTER contraction completes */
.nav-logo.dimmed {
    opacity: 0.5;
    /* Match expanded letters brightness */
}

/* Bright on hover AND when expanded */
.nav-logo:hover,
.nav-logo.open {
    opacity: 1;
}

.nav-word {
    display: inline-flex;
    align-items: flex-end;
    /* Align expanding text to baseline */
}

/* Base Spans */
.nav-logo span {
    display: inline-block;
}

/* Initial letters D, B, S - cascade to 0.5 opacity on expand */
.initial-letter {
    opacity: 1;
    transition: opacity 0.6s ease-in-out;
}

/* Cascading delays: D -> B -> S -> Star (only on .open, not :hover) */
.nav-logo.open .initial-d {
    opacity: 0.5;
    transition-delay: 0s;
}

.nav-logo.open .initial-b {
    opacity: 0.5;
    transition-delay: 0.15s;
}

.nav-logo.open .initial-s {
    opacity: 0.5;
    transition-delay: 0.3s;
}

/* Expansion Logic - Text */
.logo-reveal {
    max-width: 0;
    opacity: 0;
    overflow: hidden;
    white-space: nowrap;
    transition: max-width 0.8s cubic-bezier(0.25, 1, 0.5, 1), opacity 0.6s ease-in-out;
    vertical-align: bottom;


    /* Matching Font to Parent (DBS) */
    font-family: inherit;
    font-weight: inherit;
    letter-spacing: inherit;
}

.nav-logo.open .logo-reveal {
    max-width: 400px;
    /* Increased to prevent clipping of BLACKSMITH */
    opacity: 0.5;

    /* Reduced to 50% for darker appearance */
}

/* I Container Logic */
.i-container {
    position: relative;
    display: inline-block;
    width: 0;
    /* Initially creates no space */
    transition: width 0.8s cubic-bezier(0.25, 1, 0.5, 1);
}

.nav-logo.open .i-container {
    width: 0.4em;
    /* Width of the letter I */
}

/* The Letter 'I' Glyph */
.i-glyph {
    opacity: 0;
    transition: opacity 0.5s;
}

.nav-logo.open .i-glyph {
    opacity: 0.5;
    /* Match the half-opacity of other letters */
}

/* Y2K Star Logic - Split Responsibilities */
.star-wrapper {
    position: absolute;
    width: 14px;
    height: 14px;
    transition: all 0.8s cubic-bezier(0.25, 1, 0.5, 1);

    /* COLLAPSED STATE: Near 'S' */
    top: -10px;
    left: -5px;
    transform-origin: center;
    transform: scale(1.2);
    pointer-events: none;
}

.nav-logo.open .star-wrapper {
    /* EXPANDED STATE: Dot of the 'I' */
    /* Align horizontally to the center of the .i-container */
    top: -10px;
    left: 50%;
    /* Shift back by 50% of itself to center perfectly. 
       REMOVED scale(0.5) per user request to keep it regular size. */
    transform: translateX(-50%) scale(1);
}

.y2k-star {
    width: 100%;
    height: 100%;
    fill: var(--text-white);

    /* Static by default, smooth return */
    transform: rotate(0deg);
    transition: transform 1s cubic-bezier(0.25, 1, 0.5, 1);
    display: block;
}

/* Spin only on expand - with cascade delay */
.nav-logo.open .y2k-star {
    animation: spin-slow 2s linear infinite;
}

/* Star opacity cascade - last in sequence */
.y2k-star {
    opacity: 1;
    transition: opacity 0.6s ease-in-out;
}

.nav-logo.open .y2k-star {
    opacity: 0.5;
    transition-delay: 0.45s;
}

@keyframes spin-slow {
    from {
        transform: rotate(0deg);
    }

    to {
        transform: rotate(360deg);
    }
}

.nav-links {
    display: flex;
    gap: 2rem;
}

.nav-link {
    font-size: var(--text-label);
    font-family: var(--font-body);
    /* Ensure font is set */
    color: var(--text-white);
    text-decoration: none;
    text-transform: uppercase;
    opacity: 0.7;
    transition: opacity 0.3s;
    position: relative;
    padding-bottom: 5px;
}

.nav-link::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%;
    /* Start from center */
    width: 0;
    /* Start with no width */
    height: 1px;
    background: var(--text-white);
    transition: width 0.4s var(--ease-out), left 0.4s var(--ease-out);
}

.nav-link:hover {
    opacity: 1;
}

/* --- NAV TIMELINE (SPA) --- */
.nav-links {
    display: flex;
    gap: 30px;
    list-style: none;
    align-items: center;

    margin: 0;
    padding: 0;
}



.nav-link {
    text-decoration: none;
    color: var(--text-gray);
    font-family: var(--font-body);
    font-size: 0.75rem;
    font-weight: 600;
    letter-spacing: 0.1em;
    position: relative;
    padding: 5px 10px;
    transition: color 0.3s, text-shadow 0.3s;
    cursor: pointer;
}

/* 4-Point Star Indicator - Above nav link, matching DBS logo */
.nav-link::before {
    content: '';
    position: absolute;
    top: -4px;
    left: 50%;
    transform: translateX(-50%) scale(0);
    width: 10px;
    height: 10px;
    background-image: url('data:image/svg+xml;utf8,<svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path d="M12 2 L15 10 L23 12 L15 14 L12 22 L9 14 L1 12 L9 10 Z" fill="%23667fe4"/></svg>');
    background-size: contain;
    background-repeat: no-repeat;
    transition: transform 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    filter: drop-shadow(0 0 5px var(--brand-pop));
}

/* Hover & Active States */
.nav-link:hover,
.nav-link.active {
    color: var(--text-white);
    text-shadow: 0 0 8px rgba(255, 255, 255, 0);
}

.nav-link.active {
    color: var(--brand-pop);
    text-shadow: 0 0 15px rgba(69, 97, 204, 0.5);
}

.nav-link.active::before {
    transform: translateX(-50%) scale(1);
}

/* --- RESTORED CONTACT BUTTON --- */
.btn-contact {
    position: relative;
    overflow: hidden;
    /* Contains the glow */
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 0.5rem;
    color: var(--text-gray);
    /* Match nav-link rest state */
    font-weight: 600;
    padding: 8px 24px;
    border: 1px solid var(--brand-pop50);
    background-color: rgba(10, 10, 10, 0.8);
    /* Dark glass base */
    border-radius: 8px;
    cursor: pointer;
    font-family: var(--font-body);
    text-transform: uppercase;
    font-size: 0.75rem;
    letter-spacing: 0.05em;
    transition: transform 0.1s ease, box-shadow 0.2s ease, border-color 0.3s;
    backdrop-filter: blur(10px);
    z-index: 1;
    white-space: nowrap;
    margin-left: 0;
    /* Gap from the separator */
    min-width: 140px;
    /* LOCKS GEOMETRY */
    text-align: center;
}

/* --- GLOW MECHANISM --- */
.contact-glow {
    position: absolute;
    width: 300px;
    height: 300px;
    border-radius: 50%;
    /* Subtle white gloss to match the requested effect */
    background: radial-gradient(circle, rgba(69, 97, 204, 0.3) 0%, rgba(69, 97, 204, 0) 70%);
    transform: translate(-50%, -50%);
    pointer-events: none;
    z-index: 0;
    /* Behind text */
}

/* Ensure text stays on top */
.btn-contact span,
.btn-contact {
    z-index: 1;
}

.contact-glow.rippling {
    animation: ripple-effect 0.6s ease-out;
}

@keyframes ripple-effect {
    to {
        transform: translate(-50%, -50%) scale(4);
        opacity: 0;
    }
}

.btn-contact:hover {
    border-color: var(--brand-pop);
    /* No Glow */
}

.btn-contact:active {
    transform: translateY(1px);
}

/* Removed Contact Glow */

/* --- HERO SECTION --- */
/* Fullscreen, Bold, Scrolling up to reveal white/content */
#hero {
    height: 100vh;
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    /* Text at bottom */
    padding: 15px;
    padding-left: var(--spacing-page);
    position: relative;
    background: transparent;
    /* Allows canvas behind */
    /* z-index: 2; REMOVED FOR BLEND MODE */
}

.hero-gradient-mask {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 40vh;
    /* Smooth fade height */
    /* Non-linear "Scrub" Gradient for smoothness */
    background: linear-gradient(to bottom,
            rgba(10, 10, 10, 0) 0%,
            rgba(10, 10, 10, 0.1) 20%,
            rgba(10, 10, 10, 0.3) 40%,
            rgba(10, 10, 10, 0.6) 70%,
            var(--bg-deepblack) 100%);
    /* Match Works BG */
    z-index: 1;
    pointer-events: none;
    display: block;
}

.hero-vignette-mask {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    /* Eclipse: Dark Center (Backing Text), Transparent Edges (Revealing Sketch) */
    background: radial-gradient(circle at center,
            rgba(5, 5, 8, 0.9) 0%,
            rgba(5, 5, 8, 0.6) 50%,
            transparent 100%);
    /* Maximum Radius */
    z-index: 1;
    /* Locked with Bottom Mask */
    pointer-events: none;
    mix-blend-mode: multiply;
}

.hero-mega-text {
    font-family: var(--font-display);
    font-size: clamp(1rem, 5.5vw, 9rem);
    /* Calibrated for Mobile fit + Desktop Scale */
    line-height: 0.9;
    text-transform: uppercase;
    width: 100%;
    max-width: 100vw;
    margin: 0;
    pointer-events: none;
    letter-spacing: -0.03em;
    position: relative;
    z-index: 10 !important;
    /* RESTORED: Sits above Vignette */

    /* Vertical Spacing Control */
    display: flex;
    flex-direction: column;
    gap: 0.2em;
    /* Reluative gap */
    align-items: center;
    text-align: center;
}

/* FORCE 3 LINES: Clean Style */
.hero-mega-text span {
    white-space: nowrap;
    display: block;
    color: #e0e6ff !important;
    /* Unified Luminous Frost */
    -webkit-text-stroke: 0;
    transition: color 0.3s;
}

/* POP CLASS: Unified Color */
.blend-difference,
.blend-difference span {
    mix-blend-mode: normal !important;
    color: #e0e6ff !important;
    /* Unified Luminous Frost */
    opacity: 1;
    /* Removed !important to allow animation control */
    -webkit-text-stroke: 0;
    /* No Border */
    position: relative;
    display: block;
}

/* --- CHARACTER REVEAL ANIMATION (QUANTUM FLUX) --- */
.hero-mega-text span.char {
    display: inline-block !important;
    /* Override parent block */
    opacity: 0;
    will-change: transform, opacity, filter;
    /* Animation injected via JS */
}

@keyframes revealChar {
    0% {
        opacity: 0;
        transform: translateY(40px) scale(1.1);
        filter: blur(12px);
    }

    100% {
        opacity: 1;
        transform: translateY(0) scale(1);
        filter: blur(0);
    }
}

@keyframes revealChunk {
    0% {
        opacity: 0;
        transform: translateY(30px);
    }

    100% {
        opacity: 1;
        transform: translateY(0);
    }
}

/* --- GLOBAL REVEAL UTILITIES --- */
/* Standard Headers (Slide Up, No Blur) */
.reveal-standard {
    opacity: 0;
    /* Hidden waiting for scroll */
    will-change: opacity, transform;
}

.reveal-standard.is-visible {
    animation: revealChunk 0.8s cubic-bezier(0.1, 0.9, 0.2, 1) forwards;
}

/* Special VFX (Blur Cascade) - Handled logic in JS, this is base state */
.reveal-fx-blur .char {
    opacity: 0;
}



